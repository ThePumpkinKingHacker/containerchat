@model UserModel

@{
    ViewBag.Link = "Users";
}

<div class="container" style="text-align:left;">
    <partial name="_Header" />
    <div class="card">
        <div class="card-header">
            Delete User
        </div>
        <div class="card-body">
            <form asp-controller="User" asp-action="Delete" method="post">
                <div style="color:red;">
                    @Html.ValidationSummary()
                </div>

                <input type="hidden" name="UserName" value="@Model.UserName" />

                <p class="text-danger">
                    You are about to delete this user and all of their existing messages! This cannot be undone!
                </p>

                <button type="submit" class="btn btn-danger"
                onclick="return Confirm('Are you sure you want to delete this user and all user messages?')">Delete</button>
                <a asp-action="Index" asp-controller="User" class="btn btn-dark">Back</a>
            </form>
        </div>
    </div>
</div>
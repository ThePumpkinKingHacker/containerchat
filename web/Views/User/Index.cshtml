@model List<UserModel>

@{
    ViewBag.Link = "Users";
}

<div class="container" style="text-align:left;">
    @Html.Partial("_Header")

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">User Name</th>
                <th scope="col">Role</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @switch (item.RoleEnum)
                        {
                            case 0:
                                <span>Administrator</span>
                                break;
                            case 1:
                                <span>User</span>
                                break;
                            default:
                                <span>Unknown</span>
                                break;
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="User">Edit</a> | 
                        <a asp-action="Delete" asp-controller="User" style="color:red;">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" asp-asp-controller="User" class="btn btn-primary">Add User</a>
</div>